<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mauiApp2="clr-namespace:MauiApp2"
             xmlns:popup="http://schemas.syncfusion.com/maui"
             x:Class="MauiApp2.MainPage">

    <StackLayout Margin="20">
        <Picker x:Name="GroupPicker" Title="Select Group" SelectedIndexChanged="OnGroupSelectedIndexChanged">
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>ПИ-1-20</x:String>
                    <x:String>ПИ-2-20</x:String>
                    <x:String>ПИ-1-21</x:String>
                </x:Array>
            </Picker.ItemsSource>
        </Picker>

        <ScrollView>
            <StackLayout x:Name="LessonsStackLayout1" Spacing="10" Padding="5" IsVisible="False"
            > <!-- Set Padding here -->

                <mauiApp2:Header Margin="0,0,0,10"/>
                <mauiApp2:Lesson x:Name="Test1"  Text="08:00 - 09:20" Margin="0,0,0,10"/>
                
            </StackLayout>
        </ScrollView>
    </StackLayout>

</ContentPage>
